<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mirahome.customapplication.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mirahome.customapplication.SelectValueView
            android:id="@+id/select_value_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/transparent_black_10"
            app:bigScaleWidth="2dp"
            app:scaleColor="@color/gary"
            app:scaleSpaceWidth="10dp"
            app:scaleTextColor="@color/transparent_black_95"
            app:smallScaleWidth="1dp"
            app:minValue="50"
            app:maxValue="120"/>

        <View
            android:layout_width="4px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/change_data_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="111"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/select_data_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="11111"
        android:textColor="@color/colorAccent"/>


</LinearLayout>
